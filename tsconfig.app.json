{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "module": "ES2020",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
